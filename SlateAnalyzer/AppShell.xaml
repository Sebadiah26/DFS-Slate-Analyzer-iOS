<?xml version="1.0" encoding="UTF-8" ?>
<Shell   BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}"
    x:Class="SlateAnalyzer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:SlateAnalyzer.Views"
    Title="DFS Analyzer">

    <Shell.TitleView >
      
            <Label HorizontalOptions="CenterAndExpand" Style="{StaticResource MediumHeaderLabel}" Text="DFS GAMEDAY LIVE"  HeightRequest="30" />

            <!--<Image Source="home.png" HeightRequest="50"  />-->
       
    </Shell.TitleView>

    <TabBar>

        <Tab Icon="home.png"   Title="Home"  >
            <ShellContent ContentTemplate="{DataTemplate view:MainPage}"/>
        </Tab>

        <Tab   Icon="home.png"     Title="Scores">
            <ShellContent
            Title="DFS Analyzer"
           ContentTemplate="{DataTemplate view:EntriesPage}"
            Route="EntriesPage" />  
        </Tab>
    </TabBar>

   

</Shell>
    
    
<!--Shell.FlyoutBehavior="Disabled"-->